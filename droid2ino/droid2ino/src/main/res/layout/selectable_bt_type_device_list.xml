<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/dialog_title"
        android:text="@string/select_device"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:paddingLeft="10dp"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="@color/accent"
        android:layout_toLeftOf="@+id/scan_devices_btn"/>

    <ImageButton
        android:id="@+id/scan_devices_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@android:drawable/ic_popup_sync"
        android:tint="@color/accent"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/select_bt_type_container"
        android:layout_alignTop="@id/dialog_title"
        android:layout_alignBottom="@id/dialog_title"
        android:paddingLeft="8dp"
        android:paddingRight="7dp"
        android:scaleType="center"/>

    <View
        android:id="@+id/title_separator"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@id/dialog_title"
        android:background="@color/accent"/>

    <LinearLayout
        android:id="@+id/select_bt_type_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/title_separator">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/bt_socket_type_btn"
            android:layout_width="@dimen/dialog_select_bt_type_button"
            android:layout_height="@dimen/dialog_select_bt_type_button"
            android:textColor="@color/selector_bt_type_button_text"
            android:background="@drawable/selector_bt_type_button_tint"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="3dp"
            android:text="BT socket"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/ble_type_btn"
            android:layout_width="@dimen/dialog_select_bt_type_button"
            android:layout_height="@dimen/dialog_select_bt_type_button"
            android:textColor="@color/selector_bt_type_button_text"
            android:background="@drawable/selector_bt_type_button_tint"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="3dp"
            android:text="BLE"/>
    </LinearLayout>

    <include layout="@layout/device_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_separator"
        android:layout_toRightOf="@id/select_bt_type_container"/>

</RelativeLayout>